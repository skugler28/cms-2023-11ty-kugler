<section id="news">
    <p class="upperheading">Making waves since 2004</p>
    <h2>In the News</h2>
    <div class="articles-wrapper">

        {% assign news = collections.news | reverse %}
        {% for n in news limit:3 %}
        <article>
            <h3> {{ n.data.title }} </h3>
            <img src='{{ n.data.image1x }}'
                srcset="{{ n.data.image1x }} 1x, {{ n.data.image2x }} 2x, {{ n.data.image4x }} 4x, {{ n.data.image6x }} 6x"
                alt="{{ n.data.imageAlt }}">
            <p>{{ n.data.excerpt }}</p>
            <a href='{{ n.url }}' class="button">Read more</a>
        </article>
        {% endfor %}

    </div>
